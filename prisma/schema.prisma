// This is your Prisma schema file.

generator client {
  provider = "prisma-client"
  output   = "../src/generated/client_v3"
}

datasource db {
  provider = "sqlite"
  url      = "file:d:/react/app1/prisma/dev.db"
}

// Domain: Reminder (Enhanced)
model Reminder {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  title      String
  category   String   @default("general") 
  dueAt      DateTime
  
  remindBeforeValue Int     @default(0) 
  remindBeforeUnit  String  @default("days")

  status       String   // 'pending' | 'completed' | 'missed'
  isPinned     Boolean  @default(false) // Productivity Booster
  displayOrder Int      @default(0)     // Manual sort order
  
  linkedLogId      String? 
  recurrenceRuleId String?
}

// Assets (New Feature)
model DigitalAsset {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  title      String
  type       String   // 'Domain' | 'Subscription' | 'License' | 'Warranty' | 'Certificate' | 'Other'
  category   String   @default("Personal")
  
  identifier String?  // e.g. domain name, serial number
  metadata   String?  // e.g. "Email: user@example.com"
  
  expiresAt  DateTime? 
  remindAt   DateTime?
  
  status       String   @default("active") // 'active' | 'expired' | 'cancelled'
  displayOrder Int      @default(0)
}

// Deprecated
model LifeLog {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  title      String
  category   String
  notes      String?
  occurredAt DateTime
}
