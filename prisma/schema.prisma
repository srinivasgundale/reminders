// This is your Prisma schema file.

generator client {
  provider = "prisma-client"
  output   = "../src/generated/client_v3"
}

datasource db {
  provider = "sqlite"
  url      = "file:d:/react/app1/prisma/dev.db"
}

// Domain: Reminder (Enhanced)
model Reminder {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  title      String
  category   String   @default("general") 
  dueAt      DateTime
  
  remindBeforeValue Int     @default(0) 
  remindBeforeUnit  String  @default("days")

  status       String   // 'pending' | 'completed' | 'missed'
  isPinned     Boolean  @default(false) // Productivity Booster
  displayOrder Int      @default(0)     // Manual sort order
  
  linkedLogId      String? 
  recurrenceRuleId String?
}

// Deprecated
model LifeLog {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  title      String
  category   String
  notes      String?
  occurredAt DateTime
}
